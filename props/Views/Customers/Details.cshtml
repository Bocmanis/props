@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <button>
        @Html.ActionLink("Generate Properties", "GenerateProperties", new { id = Model.Id })
    </button>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Gender.Label)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gender.Label)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

    </dl>
    <h4>Favourite pet</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FavouritePet.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FavouritePet.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FavouritePet.Species)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FavouritePet.Species)
        </dd>
