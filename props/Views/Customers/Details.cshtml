            @Html.DisplayNameFor(model => model.FavouritePet.Colour)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FavouritePet.Colour)
        </dd>
    </dl>
    <h4>All pets</h4>
    @foreach (var pet in Model.Pets)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => pet.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => pet.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => pet.Species)
            </dt>

            <dd>
                @Html.DisplayFor(model => pet.Species)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => pet.Colour)
            </dt>

            <dd>
                @Html.DisplayFor(model => pet.Colour)
            </dd>
        </dl>
    }
